{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}


    <div class="main">
        {{ form_start(filterForm, {'attr': {'class': 'filterForm'}}) }}
        <div class="row">
            <div class="col-lg-3">{{ form_label(filterForm.site) }}</div>
            <div class="col-lg-2">{{ form_widget(filterForm.site) }}</div>
        </div>
        <div class="row">
            <div class="col-lg-3">{{ form_label(filterForm.recherche) }}</div>
            <div class="col-lg-1">{{ form_widget(filterForm.recherche) }}</div>
            <div class="col-lg-6 offset-lg-2">{{ form_widget(filterForm.organisateur) }}</div>
        </div>
        <div class="row">
            <div class="col-lg-4 offset-lg-6">{{ form_widget(filterForm.inscrit) }}</div>
            <div class="col-lg-1">
                <button>rechercher</button>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-1">{{ form_label(filterForm.dateDebut) }}</div>
            <div class="col-lg-2">{{ form_widget(filterForm.dateDebut) }}</div>
            <div class="col-lg-1">{{ form_label(filterForm.dateFin) }}</div>
            <div class="col-lg-2">{{ form_widget(filterForm.dateFin) }}</div>
            <div class="col-lg-6">{{ form_widget(filterForm.nonInscrit) }}</div>
        </div>
        <div class="row">
            <div class="col-lg-6 offset-lg-6">{{ form_widget(filterForm.sortiesPassees) }}</div>
        </div>


        {{ form_end(filterForm) }}

        <div>
            {% for sortie in sorties %}
                <div class="sortie">
                    <div class="row">
                        <div class="col-lg-1 offset-lg-1">photo</div>
                        <div class="col-lg-10">
                            <div class="row">
                                <div class="col-lg-2">Nom</div>
                                <div class="col-lg-1">Date</div>
                                <div class="col-lg-1">Cl√¥ture</div>
                                <div class="col-lg-1">Inscrits/places</div>
                                <div class="col-lg-1">Etat</div>
                                <div class="col-lg-1">Inscrit</div>
                                <div class="col-lg-1">Organisateur</div>
                                <div class="col-lg-1">Action</div>
                            </div>
                            <div class="row">
                                <div class="col-lg-2">{{ sortie.nom }}</div>
                                <div class="col-lg-1">{{ sortie.dateDebut|date('d/m/Y') }}</div>
                                <div class="col-lg-1">{{ sortie.dateCloture|date('d/m/Y') }}</div>
                                <div class="col-lg-1">{{ sortie.inscriptions|length }}/{{ sortie.nbInscriptionsMax }}</div>
                                <div class="col-lg-1">{{ sortie.etat.libelle }}</div>
                                <div class="col-lg-1">
                                    {% for ins in sortie.inscriptions %}
                                    {% if ins.participant.id == app.user.id %}
                                        X
                                    {% endif %}
                                    {% endfor %}
                                </div>
                                <div class="col-lg-1">{{ sortie.organisateur.pseudo }}</div>
                                <div class="col-lg-1">Actions</div>
                            </div>
                        </div>
                    </div>

                </div>
            {% endfor %}
        </div>

    </div>
{% endblock %}

{% block style %}
    <style type="text/css">
        .main {
            margin-left: 5vw;
            margin-right: 5vw;
        }

        .sortie {
            margin-bottom: 3vh;
            border: 1px solid black;
            border-radius: 1vw;
        }

        .filterForm {
            margin-top: 3vh;
            margin-bottom: 3vh;
            padding: 3vh;
            border: 1px solid black;
            border-radius: 1vw;
        }

        input[type=text], input[type=date], select {
            border: 1px solid black;
            border-radius: 0.5vw;
            text-align: center;
        }

        button {
            border: 1px solid black;
            border-radius: 0.5vw;
        }

        input[type=checkbox] {
            -webkit-appearance: none;
            -moz-appearance: none;
            width: 1.5vh;
            height: 1.5vh;
            margin-right: 1vw;
            border: 1px solid black;
            border-radius: 50%;
        }

        input[type=checkbox]:checked {
            background-color: #00a6ff;
        }
    </style>
{% endblock %}
