        <div class="col-lg-2">{{ form_label(filterForm.site) }}</div>
        <div class="col-lg-2">{{ form_widget(filterForm.site) }}</div>
    </div>
    <div class="row">
        <div class="col-lg-2">{{ form_label(filterForm.recherche) }}</div>
        <div class="col-lg-2">{{ form_widget(filterForm.recherche) }}</div>
