        <div class="col-lg-2">{{ form_label(filterForm.organisateur) }}</div>
    </div>
    <div class="row">
        <div class="">{{ form_widget(filterForm.inscrit) }}{{ form_label(filterForm.inscrit) }}</div>
    </div>
    <div class="row">
        <div class="col-lg-2">{{ form_label(filterForm.dateDebut) }}</div>
        <div class="col-lg-2">{{ form_widget(filterForm.dateDebut) }}</div>
        <div class="col-lg-2">{{ form_label(filterForm.dateFin) }}</div>
        <div class="col-lg-2">{{ form_widget(filterForm.dateFin) }}</div>
