{% extends 'base.html.twig' %}

{% block title %}Edit profil{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1 class="offset-4">Edit profil</h1>
    <div class="offset-4">
        {{ form_start(userForm) }}

        {{ form_widget(userForm) }}

        <label for="avatar">Ma photo:</label>
        <input type="file"
               id="avatar" name="avatar"
               accept="image/png, image/jpeg" >
    </div>
    <button class="btn btn-lg mb-4 btn-primary offset-5" type="submit">
        Enregister
    </button>

    {{ form_end(userForm) }}
    <button class="btn btn-lg mb-4 btn btn-danger" type="submit">
        Annuler
    </button>

{% endblock %}
