{% extends 'base.html.twig' %}

{% block title %}Gérer les sites{% endblock %}

{% block body %}

    <h1>Gérer les sites</h1>

    <div class="flex-row">
        <div class="block">
            <div class="tableau">
                <div class="tableau-sites">
                    <div><strong>Nom</strong></div>
                    <div><strong>Code Postal</strong></div>
                </div>
                <div class="tableau-sites">
                    {% for site in sites %}
                        <div><span>{{ site.nom }}</span></div>
                    {% endfor %}
                </div>
            </div>
        </div>

        <div class="block">
            <div class="form">
            <h3>Ajouter un site</h3>
            <div>
                {{ form_start(siteForm) }}

                {{ form_widget(siteForm)}}

                <button type="submit" class="btn">Ajouter le site</button>
                <button class="btn"><a href="{{ path('sortie_site') }}">Retour</a></button>
                {{ form_end(siteForm) }}
            </div>
            </div>
        </div>
    </div>


{% endblock %}