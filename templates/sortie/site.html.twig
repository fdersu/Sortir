{% extends 'base.html.twig' %}

{% block title %}Gérer les sites{% endblock %}
{% block stylesheets %}<link rel="stylesheet" href="{{ asset('styles/style_flxgrd.css') }}">{% endblock %}

{% block body %}

    <h1>Gérer les sites</h1>

    <div class="flex-row">
        <div class="block">
            <div class="tableau">
                {% if is_granted("ROLE_ADMIN") %}
                <div class="tableau-sites-admin">
                    {% else %}
                    <div class="tableau-sites">
                        {% endif %}
                    <div><h3>Nom</h3></div>
                    {% if is_granted("ROLE_ADMIN") %}
                        <div><h3>Actions</h3></div>
                    {% endif %}
                </div>
                    {% if is_granted("ROLE_ADMIN") %}
                    <div class="tableau-sites-admin">
                        {% else %}
                        <div class="tableau-sites">
                            {% endif %}
                    {% for site in sites %}
                        <div {% if(loop.index is even) %} class="even left grid-item" {% else%} class="odd left grid-item" {% endif %}><span>{{ site.nom }}</span></div>
                        {% if is_granted("ROLE_ADMIN") %}
                            <div  {% if(loop.index is even) %} class="flex-row even right grid-item" {% else%} class="flex-row odd right grid-item" {% endif %}>
                                <a href="{{ path('site_update', {site_id: site.id}) }}">Modifier</a>
                                <a href="{{ path('site_delete', {site_id: site.id }) }}">Supprimer</a>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>

        <div class="block">
            <div class="form">
            <h3>Ajouter un site</h3>
            <div>
                {{ form_start(siteForm) }}

                {{ form_widget(siteForm)}}

                <button type="submit" class="btn">Valider</button>
                <button class="btn"><a href="{{ path('site_add') }}">Retour</a></button>
                {{ form_end(siteForm) }}
            </div>
            </div>
        </div>
    </div>


{% endblock %}

{% block style %}
    <style type="text/css">

        .even {
            min-height: 5vh;
            background-color: rgba(0, 166, 166, 0.3);
        }

        .odd {
            min-height: 5vh;
            background-color: rgba(51, 225, 208, 0.3);
        }

        .left {
            border-top-left-radius: 0.5vw;
        }

        .right {
            border-bottom-right-radius: 0.5vw;
        }

        .gap {
            margin-bottom: 0.5vh;
        }

    </style>
{% endblock %}