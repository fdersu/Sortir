{% extends 'base.html.twig' %}

{% block title %}Créer une sortie{% endblock %}
{% block stylesheets %}<link rel="stylesheet" href="{{ asset('styles/style_flxgrd.css') }}">{% endblock %}


{% block body %}

    <h1>Proposer une sortie</h1>

<div class="form sortie-form">
    {{ form_start(sortieForm) }}

    {{ form_row(sortieForm.nom) }}
    {{ form_row(sortieForm.dateDebut) }}
    {{ form_row(sortieForm.duree) }}
    {{ form_row(sortieForm.description) }}
    {{ form_row(sortieForm.nbInscriptionsMax) }}
    {{ form_row(sortieForm.dateCloture) }}
    {{ form_row(sortieForm.site) }}
    {{ form_row(sortieForm.ville) }}
    {{ form_row(sortieForm.lieu) }}
    <button class="btn-noStyle"><a href="{{ path('lieu_add') }}" id="eventTrigger">Ajouter un lieu</a></button>
    {{ form_row(sortieForm.urlPhoto) }}
    <div style="display: inline-flex; "></div>
    {{ form_widget(sortieForm.save) }}
    {{ form_widget(sortieForm.publish) }}

    {% if(sortie.id!=null and sortie.etat.libelle == 'Créée') %}
        <button class="btn-sortie"><a href="{{ path('sortie_delete', {'sortie_id' : sortie.id}) }}">Supprimer la sortie</a></button>
    {% endif %}
    <button class="btn-sortie" id="cancelBtnForAddSortie"><a href="{{ path('main_accueil') }}">Retour</a></button>
    
    {{ form_end(sortieForm) }}
    
</div>


{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/addSortie.js') }}"></script>
{% endblock %}
