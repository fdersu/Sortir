{% extends 'base.html.twig' %}

{% block title %}Gérer les villes{% endblock %}
{% block stylesheets %}<link rel="stylesheet" href="{{ asset('styles/style_flxgrd.css') }}">{% endblock %}

{% block body %}

    <h1>Gérer les villes</h1>

    <div class="flex-row">
        <div class="block">
            <div class="tableau">
                {% if is_granted("ROLE_ADMIN") %}
                <div class="tableau-villes-admin">
                    {% else %}
                    <div class="tableau-villes">
                        {% endif %}
                    <div><h3>Nom</h3></div>
                    <div><h3>Code Postal</h3></div>
                    {% if is_granted("ROLE_ADMIN") %}
                        <div><h3>Actions</h3></div>
                    {% endif %}
                </div>
                    {% if is_granted("ROLE_ADMIN") %}
                    <div class="tableau-villes-admin">
                        {% else %}
                        <div class="tableau-villes">
                            {% endif %}
                    {% for ville in villes %}
                        <div {% if(loop.index is even) %} class="even" {% else%} class="odd" {% endif %}><span>{{ ville.nom }}</span></div>
                        <div {% if(loop.index is even) %} class="even" {% else%} class="odd" {% endif %}><span>{{ ville.codePostal }}</span></div>
                        {% if is_granted("ROLE_ADMIN") %}
                            <div  {% if(loop.index is even) %} class="flex-row even" {% else%} class="flex-row odd" {% endif %}>
                                <a href="{{ path('ville_update', {ville_id: ville.id}) }}">Modifier</a>
                                <a href="{{ path('ville_delete', {ville_id: ville.id }) }}">Supprimer</a>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>

        <div class="block">
            <div class="form">
            <h3>Ajouter une ville</h3>
            <div>
                {{ form_start(villeForm) }}

                {{ form_widget(villeForm)}}

                <button type="submit" class="btn">Valider</button>
                <button class="btn"><a href="{{ path('lieu_add') }}">Retour</a></button>
                {{ form_end(villeForm) }}
            </div>
            </div>
        </div>
    </div>


{% endblock %}

{% block style %}
    <style type="text/css">

        .even {
            min-height: 5vh;
            background-color: rgba(0, 166, 166, 0.3);
        }

        .odd {
            min-height: 5vh;
            background-color: rgba(51, 225, 208, 0.3);
        }

        .left {
            border-top-left-radius: 0.5vw;
        }

        .right {
            border-bottom-right-radius: 0.5vw;
        }

        .gap {
            margin-bottom: 0.5vh;
        }

        .field {
            width: 100%;
            border-radius: 0.3vw;
            background: transparent;
        }
    </style>
{% endblock %}
