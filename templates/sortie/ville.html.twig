{% extends 'base.html.twig' %}

{% block title %}Créer une ville{% endblock %}

{% block body %}

    <h1>Gérer les villes</h1>

    <div class="flex-row">
        <div class="block">
            <div class="tableau">
                <div class="tableau-villes">
                    <div><strong>Nom</strong></div>
                    <div><strong>Code Postal</strong></div>
                </div>
                <div class="tableau-villes">
                    {% for ville in villes %}
                        <div><span>{{ ville.nom }}</span></div>
                        <div><span>{{ ville.codePostal }}</span></div>
                    {% endfor %}
                </div>
            </div>
        </div>

        <div class="block">
            <div class="form">
            <h3>Ajouter une ville</h3>
            <div>
                {{ form_start(villeForm) }}

                {{ form_widget(villeForm)}}

                <button type="submit" class="btn">Ajouter la ville</button>
                <button class="btn"><a href="{{ path('sortie_lieu') }}">Retour</a></button>
                {{ form_end(villeForm) }}
            </div>
            </div>
        </div>
    </div>


{% endblock %}