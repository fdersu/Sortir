{% extends 'base.html.twig' %}

{% block title %}Gérer les lieux{% endblock %}
{% block stylesheets %}<link rel="stylesheet" href="{{ asset('styles/style_flxgrd.css') }}">{% endblock %}

{% block body %}

    <h1>Gérer les lieux</h1>


        <div class="block">
            <div class="tableau">
                {% if is_granted("ROLE_ADMIN") %}
                <div class="tableau-lieux-admin">
                    {% else %}
                    <div class="tableau-lieux">
                        {% endif %}
                    <div class="hideWhenSmall"><h3>Nom</h3></div>
                    <div class="hideWhenSmall"><h3>Rue</h3></div>
                    <div class="hideWhenSmall"><h3>Latitude</h3></div>
                    <div class="hideWhenSmall"><h3>Longitude</h3></div>
                    <div class="hideWhenSmall"><h3>Ville</h3></div>
                    {% if is_granted("ROLE_ADMIN") %}
                        <div class="hideWhenSmall"><h3>Actions</h3></div>
                    {% endif %}
                </div>
                {% if is_granted("ROLE_ADMIN") %}
                        <div class="tableau-lieux-admin">
                            {% else %}
                                <div class="tableau-lieux">
                                    {% endif %}
                        {% for lieu in lieux %}
                            <div {% if(loop.index is even) %} class="even left grid-item" {% else%} class="odd left grid-item" {% endif %}><span class="displayWhenSmall">Nom : </span><span>{{ lieu.nom }}</span></div>
                            <div {% if(loop.index is even) %} class="even grid-item" {% else%} class="odd grid-item" {% endif %}><span class="displayWhenSmall">Rue : </span><span>{{ lieu.rue }}</span></div>
                            <div {% if(loop.index is even) %} class="even grid-item" {% else%} class="odd grid-item" {% endif %}><span class="displayWhenSmall">Latitude : </span><span>{{ lieu.latitude }}</span></div>
                            <div {% if(loop.index is even) %} class="even grid-item" {% else%} class="odd grid-item" {% endif %}><span class="displayWhenSmall">Longitude : </span><span>{{ lieu.longitude }}</span></div>
                            <div {% if(loop.index is even) %} class="even grid-item" {% else%} class="odd grid-item" {% endif %}><span class="displayWhenSmall">Ville : </span><span>{{ lieu.ville.nom }}</span></div>
                            {% if is_granted("ROLE_ADMIN") %}
                                <div  {% if(loop.index is even) %} class="block-case even right grid-item links" {% else%} class="block-case odd right grid-item links" {% endif %}>
                                    <a href="{{ path('lieu_update', {lieu_id: lieu.id}) }}"> Modifier </a>
                                    <a href="{{ path('lieu_delete', {lieu_id: lieu.id }) }}"> Supprimer </a>
                                </div>
                            {% endif %}
                        {% endfor %}
                        </div>
            </div>
        </div>


        <div class="block">
            <h3>Ajouter un lieu</h3>
            {{ form_start(lieuForm) }}
            <div class="my-custom-class-for-errors">
                {{ form_errors(lieuForm) }}
            </div>
            <div class="form">
                <div class=" flex-row">
                    <div class="block">
                        <div>{{ form_row(lieuForm.nom) }}</div>
                        <div>{{ form_row(lieuForm.rue) }}</div>
                        <div>{{ form_row(lieuForm.ville) }}</div>
                    </div>
                    <div class="block">
                        <div>{{ form_row(lieuForm.latitude) }}</div>
                        <div>{{ form_row(lieuForm.longitude) }}</div>
                    </div>
                </div>
                <br>
                <div class=" flex-row">
                    <button class="btn-sortie"><a href="{{ path('ville_add') }}">Gérer les villes</a></button>
                    <button type="submit" class="btn-sortie">Valider</button>
                    <button class="btn-sortie"><a href="{{ path('sortie_add') }}">Retour</a></button>
                </div>
                {{ form_end(lieuForm) }}
            </div>
        </div>


{% endblock %}


