<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %} Welcome! {% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Chicle&family=Englebert&family=IM+Fell+DW+Pica+SC&family=Mouse+Memoirs&family=Rum+Raisin&family=Stylish&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('styles/style_hdr.css') }}">
    <link rel="icon" href="{{ asset('img/Icon-sortie.png') }}">
    {% block stylesheets %}
        
    {% endblock %}

</head>
<body>
<div class="container-grille">
<header class="bg-color flex-row">

    <div style="align-self: center"><img src="{{ asset('img/Logo-sortie.png') }}" alt="Sortie !" class="logo" style="align-content: flex-start"></div>
    <div style="align-self: center"><h1>Sortir.com</h1></div>

    {% if app.user %}
        <div>{% include 'menu/nav.html.twig' %}</div>
    {% endif %}
</header>
<main>
{% for label, messages in app.flashes %}
    {% for message in messages %}
        <center>
            <div class="alert alert-primary flash flash-{{ label }}">
                {{ message }}
            </div>
        </center>
    {% endfor %}
{% endfor %}
</main>
</div>
{% block body %}{% endblock %}
{% block style %}{% endblock %}

{% block javascripts %}
    {# {{ encore_entry_script_tags('app') }} #}
{% endblock %}
</body>
</html>
